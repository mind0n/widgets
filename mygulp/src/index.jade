html
    head
        meta(charset="UTF-8")/
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")/
        title() Home Page
        link(rel="stylesheet", href="themes/wo/wo.css")/ 
        link(rel="stylesheet", href="themes/lib/bootstrap.css")/ 

        script(src=locals.mode=="dev"?"scripts/jquery.js":"scripts/jquery-min.js")
        script(src=locals.mode=="dev"?"scripts/velocity.js":"scripts/velocity-min.js")
        script(src=locals.mode=="dev"?"scripts/wo.js":"scripts/wo-min.js")
        script().
            $(function(){
                var h = "300px";
                var raw = wo.use({
                    ui:"card",
                    class:"card static",
                    alias:"box",
                    id:"rcc",
                    style:{height:h, overflow:"hidden"},
                    made:function(){
                        this.$body.style.overflow = "auto";
                        this.set({
                            title: "Raw Events",
                            body:{
                                    mode:"append", target:{
                                    ui:"card",
                                    class:"card static",
                                    alias:"inbox",
                                    made:function(){
                                        this.set({title:"Content", body:"Card Body"});
                                    }
                                }
                            }
                        });
                    }
                });
                raw.set({
                    title: "Raw Events",
                    body:{
                            mode:"append", target:{
                            ui:"card",
                            class:"card static",
                            alias:"inbox",
                            made:function(){
                                this.set({title:"Content"});
                            }
                        }
                    }
                });
                var psr = wo.use({
                    ui:"card",
                    alias:"box",
                    id:"pcc",
                    style:{height:h, overflow:"auto"},
                    $:{
                        ui:"card",
                        class:"card static",
                        alias:"testbox",
                        made:function(){
                            this.set({title:"Content"});
                        }
                    }
                });
                psr.set({title:"Caption"});

                $("#rc").append(raw);
                $("#pc").append(psr);

                $("#bpri").click(function(){

                });
                $("#bdef").click(function(){
                    wo.cover({
                        ui:"card",
                        alias:"box",
                        style:{width:"80%", display:"none"},
                        made:function(){
                            let dp = wo.use({
                                ui:"dropdown",
                                "item-template":"dropdown.simpleitem"
                            });
                            this.set({
                                title: "Card Title",
                                body:dp
                            });
                            dp.bind(["item 1", "item 2"]);

                            finger(this).zoomable();
                        }
                    });
                });
                $("#bdsb").click(function(){
                });
            });

    body(class="wo basic")
        div
            div(class="container-fluid basic")
                div.row()
                    div(class="col-xs-12 col-sm-4")
                        button#bpri(class="primary large fill-x") Primary
                    div(class="col-xs-12 col-sm-4")
                        div#bdef(class="wbtn large fill-x") Default
                    div(class="col-xs-12 col-sm-4")
                        button#bdsb(class="large disabled fill-x") Disabled
                div.row()
                    div#rc(class="col-xs-12 col-sm-6")
                    div#pc(class="col-xs-12 col-sm-6")
